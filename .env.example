# Agentic Stack MVP Environment Variables
# Copy this file to .env and fill in your values

# API Keys (Required)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Optional API Keys for enhanced functionality
BRAVE_API_KEY=BSA...  # For web search
GOOGLE_API_KEY=...     # Alternative search provider

# Database Configuration
DB_PASSWORD=secure_password_here
DATABASE_URL=postgresql://agent:${DB_PASSWORD}@localhost:5432/agentic_stack

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=  # Optional, if Redis requires auth

# Application Settings
ENV=development  # development, staging, production
LOG_LEVEL=INFO   # DEBUG, INFO, WARNING, ERROR
HOST=0.0.0.0
PORT=8000

# Agent Configuration
AGENT_TIMEOUT=30        # Seconds
MAX_RETRIES=3
TEMPERATURE=0.7
MAX_TOKENS=2000
MODEL_PREFERENCE=openai:gpt-4o  # Default model

# Observability (Optional)
OTLP_ENDPOINT=localhost:4317  # OpenTelemetry endpoint
LOGFIRE_TOKEN=...             # Logfire token for PydanticAI monitoring

# MCP Server Configuration
MCP_WEB_SEARCH_URL=http://localhost:3001/sse
MCP_PYTHON_EXECUTOR_URL=http://localhost:3002/sse
MCP_DATABASE_CONNECTOR_URL=http://localhost:3003/sse

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # Seconds

# Storage Limits
MAX_CONTEXT_SIZE_MB=10
MAX_TASK_RETENTION_HOURS=24

# Performance Tuning
WORKER_COUNT=4
THREAD_POOL_SIZE=10
CONNECTION_POOL_SIZE=20