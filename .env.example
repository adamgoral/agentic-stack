# Agentic Stack Environment Variables
# Copy this file to .env and fill in your values

# =====================================================
# REQUIRED API KEYS
# =====================================================
# At least one AI provider API key is required
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DB_PASSWORD=secure_password_here
DATABASE_URL=postgresql://agent:${DB_PASSWORD}@localhost:5432/agentic_stack

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=  # Optional, if Redis requires authentication

# =====================================================
# APPLICATION SETTINGS
# =====================================================
ENV=development  # Options: development, staging, production
LOG_LEVEL=INFO   # Options: DEBUG, INFO, WARNING, ERROR
HOST=0.0.0.0
PORT=8000

# =====================================================
# DOCKER ENVIRONMENT
# =====================================================
DOCKER_ENV=false  # Set to true when running in Docker

# =====================================================
# AGENT PORTS (For distributed deployment)
# =====================================================
ORCHESTRATOR_PORT=8000
RESEARCH_AGENT_PORT=8001
CODE_AGENT_PORT=8002
ANALYTICS_AGENT_PORT=8003

# =====================================================
# AGENT CONFIGURATION
# =====================================================
AGENT_TIMEOUT=30        # Seconds
MAX_RETRIES=3
TEMPERATURE=0.7
MAX_TOKENS=2000
MODEL_PREFERENCE=openai:gpt-4o  # Default model

# =====================================================
# OPTIONAL API KEYS (For enhanced functionality)
# =====================================================
BRAVE_API_KEY=BSA...     # For web search via MCP server
GOOGLE_API_KEY=...       # Alternative search provider

# =====================================================
# MCP SERVER CONFIGURATION
# =====================================================
MCP_WEB_SEARCH_URL=http://localhost:3001/sse
MCP_PYTHON_EXECUTOR_URL=http://localhost:3002/sse
MCP_DATABASE_CONNECTOR_URL=http://localhost:3003/sse

# MCP Server Settings
MAX_EXECUTION_TIME=30    # Python executor timeout
MAX_MEMORY_MB=512        # Python executor memory limit

# =====================================================
# OBSERVABILITY (Optional)
# =====================================================
OTLP_ENDPOINT=localhost:4317  # OpenTelemetry endpoint for Jaeger
LOGFIRE_TOKEN=...             # Logfire token for PydanticAI monitoring

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =====================================================
# SECURITY
# =====================================================
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # Seconds

# =====================================================
# STORAGE LIMITS
# =====================================================
MAX_CONTEXT_SIZE_MB=10
MAX_TASK_RETENTION_HOURS=24

# =====================================================
# PERFORMANCE TUNING
# =====================================================
WORKER_COUNT=4
THREAD_POOL_SIZE=10
CONNECTION_POOL_SIZE=20